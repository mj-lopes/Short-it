{
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "noEmitOnError": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "target": "ES6",
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["ES6", "DOM", "ES2017", "ES7"],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
